class Student {
   //fields
    String name;
    int studentindex;
    int scores;
    //constructor
 Student(String name,int studentindex,int scores){
     this.name = name;
     this.studentindex = studentindex;
     this.scores = scores;
 }
 //void method doesnt return anything
    void sayHello(){
        System.out.println(name+"  "+studentindex+"  "+scores);
    }

}
